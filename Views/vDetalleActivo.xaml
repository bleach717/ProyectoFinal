<?xml version="1.0" encoding="utf-8" ?>
    
    <ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoFinal.Views.vDetalleActivo"
             Title="Detalles del Activo"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Imagen del Activo -->
            <Frame HasShadow="False" Padding="0" CornerRadius="20">
                <Image Source="macbook.png" Aspect="AspectFill" HeightRequest="200"/>
            </Frame>

            <!-- Estado -->
            <Label x:Name="lblEstado"
                   Text="En uso"
                   FontSize="14"
                   TextColor="Green"
                   HorizontalOptions="End"/>
            <!-- Título -->
            <Label x:Name="lblTitulo"
                   Text="MacBook Pro 16"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="Black"/>

            <!-- Código -->
            <Label x:Name="lblCodigo"
                   Text="LAP-2024-001"
                   FontSize="14"
                   TextColor="#888" />

            <!-- Botones -->
            <HorizontalStackLayout Spacing="15">
                <Button Text="Transferir Activo"
                        x:Name="BtnTransferir"
                        BackgroundColor="#9C6BFF"
                        TextColor="White"
                        CornerRadius="20"
                        Clicked="BtnTransferir_Clicked"
                        HorizontalOptions="FillAndExpand"/>
                <Button Text="Reportar Problema"
                        BackgroundColor="#EEE"
                        TextColor="#333"
                        CornerRadius="20"
                        HorizontalOptions="FillAndExpand"/>
            </HorizontalStackLayout>

            <!-- Información general -->
            <Frame BackgroundColor="#FAFAFA" CornerRadius="20" Padding="20">
                <VerticalStackLayout Spacing="8">
                    <Label Text="Información General"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="Black"/>
                    <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto,Auto" ColumnSpacing="10" RowSpacing="15">

                        <Label Grid.Row="0" Grid.Column="0" Text="Asignado a" TextColor="#666"/>
                        <Label x:Name="lblPropietario" Grid.Row="0" Grid.Column="1" Text="-" HorizontalTextAlignment="End" TextColor="Black"/>

                        <Label Grid.Row="1" Grid.Column="0" Text="Fecha de asignación" TextColor="#666"/>
                        <Label x:Name="lblFecha" Grid.Row="1" Grid.Column="1" Text="-" HorizontalTextAlignment="End" TextColor="Black"/>

                        <Label Grid.Row="2" Grid.Column="0" Text="Valor estimado" TextColor="#666"/>
                        <Label x:Name="lblValor" Grid.Row="2" Grid.Column="1" Text="-" HorizontalTextAlignment="End" TextColor="Black"/>

                        <Label Grid.Row="3" Grid.Column="0" Text="Ubicación" TextColor="#666"/>
                        <Label x:Name="lblUbica" Grid.Row="3" Grid.Column="1" Text="-" HorizontalTextAlignment="End" TextColor="Black"/>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- Especificaciones -->
            <Frame BackgroundColor="#FAFAFA" CornerRadius="20" Padding="20">
                <VerticalStackLayout Spacing="8">
                    <Label Text="Especificaciones"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="Black"/>
                    <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto,Auto" ColumnSpacing="10" RowSpacing="15">

                        <Label Grid.Row="0" Grid.Column="0" Text="Marca" TextColor="#666"/>
                        <Label x:Name="lblMarca" Grid.Row="0" Grid.Column="1" Text="-" HorizontalTextAlignment="End" TextColor="Black"/>

                        <Label Grid.Row="1" Grid.Column="0" Text="Modelo" TextColor="#666"/>
                        <Label x:Name="lblModelo" Grid.Row="1" Grid.Column="1" Text="-" HorizontalTextAlignment="End" TextColor="Black"/>

                        <Label Grid.Row="2" Grid.Column="0" Text="Número de Serie" TextColor="#666"/>
                        <Label x:Name="lblSerie" Grid.Row="2" Grid.Column="1" Text="-" HorizontalTextAlignment="End" TextColor="Black"/>

                        <Label Grid.Row="3" Grid.Column="0" Text="Año" TextColor="#666"/>
                        <Label x:Name="lblAnio" Grid.Row="3" Grid.Column="1" Text="-" HorizontalTextAlignment="End" TextColor="Black"/>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
