            </Frame>

            <!-- COSTO -->
            <Label Text="Costo:" TextColor="Black" FontSize="20"/>
            <Frame BorderColor="Gray" CornerRadius="8" Padding="5" BackgroundColor="White">
                <Entry x:Name="txtCosto" Keyboard="Numeric" TextColor="Black"/>
