            <Frame BorderColor="Gray" CornerRadius="8" Padding="5" BackgroundColor="White">
                <Entry x:Name="txtModelo" TextColor="Black"/>
            </Frame>

            <!-- SERIE -->
            <Label Text="Serie:" TextColor="Black" FontSize="20"/>
            <Frame BorderColor="Gray" CornerRadius="8" Padding="5" BackgroundColor="White">
                <Entry x:Name="txtSerie" TextColor="Black"/>
            </Frame>

            <!-- UBICACI�N -->
            <Label Text="Ubicaci�n:" TextColor="Black" FontSize="20"/>
            <Frame BorderColor="Gray" CornerRadius="8" Padding="5" BackgroundColor="White">
                <Entry x:Name="txtUbicacion" TextColor="Black"/>
            </Frame>

            <!-- BOT�N GUARDAR -->
            <Button Text="Guardar Cambios"
                    BackgroundColor="#7C3AED"
                    TextColor="White"
                    CornerRadius="12"
                    Padding="12"
                    Clicked="BtnGuardar_Clicked"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
