<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoFinal.Views.vTransferirActivo"
             BackgroundColor="#F4F6F9"
             Title="Transferir Activo">

    <VerticalStackLayout Padding="20" Spacing="15">

        <!-- TÍTULO -->
        <Label Text="Transferencia de Activo"
               FontAttributes="Bold"
               FontSize="22"
               TextColor="#0A3D62"
               HorizontalOptions="Center" />

        <!-- CUADRO DETALLE -->
        <Frame Padding="15"
               BackgroundColor="White"
               CornerRadius="15"
               BorderColor="#D0D3D4"
               HasShadow="True">

            <VerticalStackLayout Spacing="6">
                <Label Text="Activo:" 
                       FontAttributes="Bold"
                       TextColor="#0A3D62"/>

                <Label x:Name="lblActivo"
                       FontSize="17"
                       TextColor="#1B2631"/>

                <Label Text="Propietario Actual:" 
                       Margin="0,10,0,0"
                       FontAttributes="Bold"
                       TextColor="#0A3D62"/>

                <Label x:Name="lblPropietarioActual"
                       FontSize="17"
                       TextColor="#1B2631"/>
            </VerticalStackLayout>
        </Frame>

        <!-- BUSCADOR -->
        <Entry x:Name="txtBuscarUsuario"
               Placeholder="Buscar usuario…"
               BackgroundColor="White"
               TextColor="#1B2631"
               PlaceholderColor="#8395A7"
               
               HeightRequest="45"
               Margin="0,10,0,0"
               TextChanged="txtBuscarUsuario_TextChanged"/>

        <!-- LISTA USUARIOS -->
        <CollectionView x:Name="listaUsuarios"
                        SelectionMode="Single"
                        SelectionChanged="listaUsuarios_SelectionChanged"
                        HeightRequest="250">

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="12"
                           Margin="0,8"
                           CornerRadius="12"
                           BackgroundColor="White"
                          
                           HasShadow="True">
                        <VerticalStackLayout>
                            <Label Text="{Binding Nombre}"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="#0A3D62"/>

                            <Label Text="{Binding Apellido}"
                                   FontSize="15"
                                   TextColor="#1B2631"/>

                            <Label Text="{Binding Correo}"
                                   FontSize="12"
                                   TextColor="#8395A7"/>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>

        </CollectionView>

        <!-- BOTONES -->
        <HorizontalStackLayout Spacing="20" Margin="0,20,0,0">

            <Button Text="Cancelar"
                    BackgroundColor="#B2BABB"
                    TextColor="White"
                    CornerRadius="10"
                    HeightRequest="45"
                    Clicked="BtnCancelar_Clicked"
                    HorizontalOptions="FillAndExpand"/>

            <Button Text="Confirmar"
                    BackgroundColor="#0A3D62"
                    TextColor="White"
                    CornerRadius="10"
                    HeightRequest="45"
                    Clicked="BtnConfirmar_Clicked"
                    HorizontalOptions="FillAndExpand"/>

        </HorizontalStackLayout>

    </VerticalStackLayout>
</ContentPage>
